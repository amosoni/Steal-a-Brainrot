<svg width="1200" height="630" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#3B82F6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1E40AF;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="textGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#FFFFFF;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#F3F4F6;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- 背景 -->
  <rect width="1200" height="630" fill="url(#bg)"/>
  
  <!-- 装饰性元素 -->
  <circle cx="200" cy="150" r="80" fill="#F59E0B" opacity="0.2"/>
  <circle cx="1000" cy="480" r="60" fill="#10B981" opacity="0.2"/>
  <circle cx="1000" cy="150" r="40" fill="#EF4444" opacity="0.2"/>
  
  <!-- 主标题 -->
  <text x="600" y="200" font-family="Arial, sans-serif" font-size="72" font-weight="bold" fill="url(#textGradient)" text-anchor="middle">Steal a Brainrot</text>
  
  <!-- 副标题 -->
  <text x="600" y="280" font-family="Arial, sans-serif" font-size="36" fill="white" text-anchor="middle" opacity="0.9">La Guía Más Completa de Roblox</text>
  
  <!-- 主图标 -->
  <g transform="translate(600, 400)">
    <!-- Brainrot头部 -->
    <circle cx="0" cy="-40" r="60" fill="#F59E0B"/>
    <circle cx="0" cy="-40" r="30" fill="#FFFFFF"/>
    
    <!-- 身体 -->
    <rect x="-40" y="-20" width="80" height="60" fill="#10B981" rx="15"/>
    
    <!-- 字母B -->
    <text x="0" y="15" font-family="Arial, sans-serif" font-size="48" font-weight="bold" fill="white" text-anchor="middle">B</text>
  </g>
  
  <!-- 功能列表 -->
  <text x="600" y="520" font-family="Arial, sans-serif" font-size="24" fill="white" text-anchor="middle" opacity="0.8">Base de Datos • Calculadora • Guías • Estrategias</text>
